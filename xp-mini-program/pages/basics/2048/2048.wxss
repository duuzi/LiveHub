/**app.wxss**/
page{
  height: 100%;
  /*必须加上，否则设置整个屏幕高度不起作用  */
}
.main{
  width: 100%;
  height: 100%;
  background-color: floralwhite;
}
.header{
  width: 100%;
  box-sizing: border-box;
  -webkit-box-sizing: -webkit-border-box;
  padding:30px 20px 15px;
  height: 162px;
  display: block;
  overflow: hidden;
}
 .container {
  width: 300px;
  height: 300px;
  margin: auto;
  background-color: #CCC0B2;
  border-radius: 10px;
} 

.nickname,.score-wrap{
  float: left;
  width: 35%;
  height: 100%;
  box-sizing: border-box;
  text-align: center;
}
.score-wrap{
  width: 65%;
  overflow: hidden;
}
.score,.best-score,.restart{
  float: left;
  width: 44%;
  font-weight: 400;
  color: white;
  background-color: #CCC0B2;
  box-sizing: border-box;
  -webkit-box-sizing: -webkit-border-box;
  margin-left: 6%; 
}
.header .score-text{
  display: block;
  font-weight: 800;
}
.restart{
  color:white;
  background-color: #CCC0B2;
  width:86px;
  height:30px;
  font-size: 14px;
  font-weight: 400;
  line-height:30px;
  text-align:center;
  display: flex;
  -webkit-display:-webkit-flex;
  left:calc(50% - 50px);
  top:15px;
}
.userimg{
  display: block;
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.container .item{
  width: 65px;
  height: 65px;
  display: block;
  line-height: 70px;
  text-align: center;
  background-color: #eee4da;
  margin: 8px 0 0 8px;
  float: left;
  font-size: 30px;
  font-weight: 800;
  transition: transform 0.2s linear;
  -webkit-transition: -webkit-transform 0.2s linear;
}
